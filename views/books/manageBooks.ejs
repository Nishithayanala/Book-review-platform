<%- include('../partials/header') %>

<h2>Manage Books</h2>

<% if (books.length === 0) { %>
    <p>No books available.</p>
<% } else { %>
    <table class="manage-table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Genre</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% books.forEach(book => { %>
                <tr>
                    <td><%= book.title %></td>
                    <td><%= book.author %></td>
                    <td><%= book.genre %></td>
                    <td><%= book.description %></td>
                    <td>
                        <form action="/books/<%= book._id %>/delete" method="POST" style="display:inline;">
                            <button type="submit" class="delete-btn" onclick="return confirm('Are you sure you want to delete this book?');">Delete</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
<% } %>

<%- include('../partials/footer') %>